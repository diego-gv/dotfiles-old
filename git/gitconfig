[include]
  	path = ~/.gitconfig-personal

[includeIf "gitdir:~/workspace/"]
  	path = ~/.gitconfig-workspace

[credential]
    helper = store

[gpg]
	program = gpg

[commit]
	gpgSign = false

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	autoSetupRemote = true

[tag]
	forceSignAnnotated = false

[core]
	editor = vim
